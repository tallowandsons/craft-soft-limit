{
    "name": "tallowandsons/craft-soft-limit",
    "description": "Adds a soft character limit to text fields",
    "type": "craft-plugin",
    "license": "proprietary",
    "support": {
        "issues": "https://github.com/tallowandsons/craft-soft-limit/issues?state=open",
        "source": "https://github.com/tallowandsons/craft-soft-limit",
        "docs": "https://github.com/tallowandsons/craft-soft-limit",
        "rss": "https://github.com/tallowandsons/craft-soft-limit/releases.atom"
    },
    "require": {
        "php": ">=8.2",
        "craftcms/cms": "^5.0.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "tallowandsons\\softlimit\\": "src/"
        }
    },
    "extra": {
        "handle": "soft-limit",
        "name": "Soft Limit",
        "developer": "tallowandsons",
        "documentationUrl": "https://github.com/tallowandsons/craft-soft-limit",
        "class": "tallowandsons\\softlimit\\SoftLimit"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
